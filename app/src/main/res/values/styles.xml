<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/TextViewStyle.Base</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize theme here -->
    </style>

    <style name="DialogStyle.Base" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/gray2_H</item>
        <item name="android:textColorPrimary">@color/gray9_H</item>
        <item name="android:minWidth">@dimen/min_width_base_dialog</item>
    </style>

    <style name="DialogStyle" parent="DialogStyle.Base">
        <!-- Add more if is necessary ( < v21)-->
    </style>


    <!-- Widgets styles -->
    <style name="TextViewStyle.Base" parent="android:Widget.TextView">
        <item name="android:textColor">@color/gray3_H</item>
    </style>


</resources>
